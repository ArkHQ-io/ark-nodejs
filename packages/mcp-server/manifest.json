{
  "dxt_version": "0.2",
  "name": "ark-email-mcp",
  "version": "0.8.0",
  "description": "The official MCP Server for the Ark API",
  "author": {
    "name": "Ark",
    "email": "hi@arkhq.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArkHQ-io/ark-nodejs.git"
  },
  "homepage": "https://github.com/ArkHQ-io/ark-nodejs/tree/main/packages/mcp-server#readme",
  "documentation": "https://arkhq.io/docs",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "ARK_API_KEY": "${user_config.ARK_API_KEY}"
      }
    }
  },
  "user_config": {
    "ARK_API_KEY": {
      "title": "api_key",
      "description": "Use your API key from [arkhq.io/org/credentials](https://arkhq.io/org/credentials)\n\n```\nAuthorization: Bearer YOUR_API_KEY\n```\n",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
